<h1>Listing products</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Sku</th>
    <th>Photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.brand %></td>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.quantity %></td>
    <td><%= product.sku %></td>
    <td><%= image_tag product.avatar.url(:thumb) rescue 'N/A' %><%=product.image_uri%></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

