<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @product.brand %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @product.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Brand</div>
            <div class="itemValue"><%= @product.brand %></div>
          </li>
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @product.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">Price</div>
            <div class="itemValue"><%= @product.price %></div>
          </li>
      
          <li>
            <div class="itemLabel">Quantity</div>
            <div class="itemValue"><%= @product.quantity %></div>
          </li>
      
          <li>
            <div class="itemLabel">Sku</div>
            <div class="itemValue"><%= @product.sku %></div>
          </li>

          <li>
            <div class="itemLabel">Image URI</div>
            <div class="itemValue">
              
              <a href="<%= url_for :action => :view, :id => @product.object %>">View</a>              
            </div>
          </li>
          <li>
            <div class="itemLabel">Items</div>
            <div class="itemValue"><a href="/app/Item/view?product_id=<%=@product.object%>">View</a></div>
          </li>
      
    </ul>
  </div>

</div>
