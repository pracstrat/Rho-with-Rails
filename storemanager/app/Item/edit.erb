<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @item.name %></h1>
    <a href="<%= url_for :action => :show, :id => @item.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @item.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @item.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="item[name]" class="fieldLabel">Name</label>
            <input type="text" id="item[name]" name="item[name]" value="<%= @item.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="item[product_id]" class="fieldLabel">Product</label>
            <input type="text" id="item[product_id]" name="item[product_id]" value="<%= @item.product_id %>" <%= placeholder( "Product" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
