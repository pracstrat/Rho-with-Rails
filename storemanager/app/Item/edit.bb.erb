<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @item.object %>
    <h1>Edit <%= @item.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @item.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @item.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="item[name]" value="<%= @item.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Product: </td>
              <td class="itemValue"><input type="text" name="item[product_id]" value="<%= @item.product_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
